<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% posts.forEach(function (post, index) { %>
      <p><h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2></p>
      <p><%- post.content %></p>
    <% }) %>
  </body>
</html>
